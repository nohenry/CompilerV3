    "version": "0.2.0",
    "configurations": [
        {
            "type": "cppvsdbg",
            "request": "launch",
            "name": "Windows",
            "program": "${workspaceRoot}/target/debug/dsl_compiler.exe",
            "cwd": "${workspaceRoot}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'CompilerV3'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=compiler",
                ],
                "filter": {
                    "name": "compiler",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'CompilerV3'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=compiler",
                ],
                "filter": {
                    "name": "compiler",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}